<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         version="6.0">
    <filter>
        <filter-name>ContentTypeAndEncodingFilter</filter-name>
        <filter-class>com.github.petrovyegor.currencyexchange.controller.filter.ContentTypeAndEncodingFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ErrorHandlerFilter</filter-name>
        <filter-class>com.github.petrovyegor.currencyexchange.controller.filter.ErrorHandlerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>CORSFilter</filter-name>
        <filter-class>com.github.petrovyegor.currencyexchange.controller.filter.CORSFilter</filter-class>
    </filter>


    <filter-mapping>
        <filter-name>ContentTypeAndEncodingFilter</filter-name>
        <url-pattern>/currency/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ContentTypeAndEncodingFilter</filter-name>
        <url-pattern>/currencies</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ContentTypeAndEncodingFilter</filter-name>
        <url-pattern>/exchangeRate/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ContentTypeAndEncodingFilter</filter-name>
        <url-pattern>/exchangeRates</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>ContentTypeAndEncodingFilter</filter-name>
        <url-pattern>/exchange</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ErrorHandlerFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CORSFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>CurrencyController</servlet-name>
        <servlet-class>com.github.petrovyegor.currencyexchange.controller.CurrencyController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CurrenciesController</servlet-name>
        <servlet-class>com.github.petrovyegor.currencyexchange.controller.CurrenciesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExchangeRatesController</servlet-name>
        <servlet-class>com.github.petrovyegor.currencyexchange.controller.ExchangeRatesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExchangeRateController</servlet-name>
        <servlet-class>com.github.petrovyegor.currencyexchange.controller.ExchangeRateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExchangeController</servlet-name>
        <servlet-class>com.github.petrovyegor.currencyexchange.controller.ExchangeController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CurrenciesController</servlet-name>
        <url-pattern>/currencies</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CurrencyController</servlet-name>
        <url-pattern>/currency/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeRatesController</servlet-name>
        <url-pattern>/exchangeRates</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeRateController</servlet-name>
        <url-pattern>/exchangeRate/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExchangeController</servlet-name>
        <url-pattern>/exchange</url-pattern>
    </servlet-mapping>
</web-app>